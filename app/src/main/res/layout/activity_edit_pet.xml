<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nome do pet -->
    <EditText
        android:id="@+id/etPetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Pet" />

    <!-- Data de nascimento -->
    <EditText
        android:id="@+id/etPetBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Nascimento"
        android:layout_marginTop="16dp" />

    <!-- Tipo de animal -->
    <EditText
        android:id="@+id/etPetType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Pet"
        android:layout_marginTop="16dp" />

    <!-- Cor do pet -->
    <EditText
        android:id="@+id/etPetColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cor do Pet"
        android:layout_marginTop="16dp" />

    <!-- Porte do pet -->
    <EditText
        android:id="@+id/etPetSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Porte do Pet"
        android:layout_marginTop="16dp" />

    <!-- BotÃ£o de salvar -->
    <Button
        android:id="@+id/btnSavePet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginTop="24dp" />

</LinearLayout>
